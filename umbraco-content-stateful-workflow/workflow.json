{
    "definition": {
        "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
        "actions": {
            "Accepted_Response": {
                "inputs": {
                    "statusCode": 202
                },
                "kind": "http",
                "runAfter": {
                    "Create_or_update_Content": [
                        "Succeeded"
                    ]
                },
                "type": "Response"
            },
            "Create_or_update_Content": {
                "inputs": {
                    "parameters": {
                        "containerId": "content",
                        "databaseId": "cricketdata",
                        "isUpsert": true,
                        "item": "{\n\"data\": @{triggerBody()},\n\"partitionKey\":\"@{triggerBody()?['ContentType']}\",\n\"id\": \"@{triggerBody()?['Key']}\",\n\"type\": \"@{triggerBody()?['ContentType']}\"\n}"
                    },
                    "serviceProviderConfiguration": {
                        "connectionName": "AzureCosmosDB",
                        "operationId": "CreateOrUpdateDocument",
                        "serviceProviderId": "/serviceProviders/AzureCosmosDB"
                    }
                },
                "runAfter": {},
                "type": "ServiceProvider"
            }
        },
        "contentVersion": "1.0.0.0",
        "outputs": {},
        "triggers": {
            "manual": {
                "inputs": {
                    "schema": {
                        "properties": {
                            "ContentType": {
                                "type": "string"
                            },
                            "Key": {
                                "type": "string"
                            },
                            "Visible": {
                                "type": "boolean"
                            }
                        },
                        "required": [
                            "ContentType",
                            "Key",
                            "Visible"
                        ],
                        "type": "object"
                    }
                },
                "kind": "Http",
                "type": "Request"
            }
        }
    },
    "kind": "Stateful"
}